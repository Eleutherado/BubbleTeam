{
  "manifest_version": 2,

  "name": "Burst",
  "description": "Keeps track of what news sites you visit and how long stay on them, and uses that data to create a filter bubble vizulization",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Vizualize your News Bubble!"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["scraper.js"]
    }
  ]
}
